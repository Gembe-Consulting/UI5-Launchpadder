<mvc:View controllerName="launchpadder.controller.AppTileContainer"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:c="sap.ui.core"
        xmlns="sap.m"
		displayBlock="true"
		width="100%" height="100%" >
	<TileContainer width="100%" height="100%" >
		<tiles>
			<StandardTile press="onTilePressGetCustomData" title="App Title" info="App info" number="1" icon="sap-icon://activate" activeIcon="sap-icon://flag">
				<customData>
					<c:CustomData key="tileAppId" value="demoapp"/>
					<c:CustomData key="tileAppUrl" value="/demoapp"/>
				</customData>
			</StandardTile>
			<StandardTile press="onTilePressGetCustomData" title="App Title" info="App info" number="2" icon="sap-icon://overflow" infoState="Error">
				<customData>
					<c:CustomData key="tileAppId" value="idApp2"/>
					<c:CustomData key="tileAppUrl" value="/app2"/>
				</customData>
			</StandardTile>
			<StandardTile press="onTilePressGetCustomData" title="App Title" info="App info" number="3" icon="sap-icon://activity-items" infoState="Warning">
				<customData>
					<c:CustomData key="tileAppId" value="idApp3"/>
					<c:CustomData key="tileAppUrl" value="/app3"/>
				</customData>
			</StandardTile>
			<StandardTile press="onTilePressGetCustomData" title="Monitor App Title" info="App info to monitor something" number="4" icon="sap-icon://factory" type="Monitor">
				<customData>
					<c:CustomData key="tileAppId" value="idApp4"/>
					<c:CustomData key="tileAppUrl" value="/app4"/>
				</customData>
			</StandardTile>
			<StandardTile press="onTilePressGetCustomData" title="Create App Title" info="App info to create something" number="5" activeIcon="sap-icon://alert" type="Create">
				<customData>
					<c:CustomData key="tileAppId" value="idApp5"/>
					<c:CustomData key="tileAppUrl" value="/app5"/>
				</customData>
			</StandardTile>
		</tiles>
	</TileContainer>
</mvc:View>
